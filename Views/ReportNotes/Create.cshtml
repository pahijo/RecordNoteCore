@model RecordNoteCore.Data.Entities.ReportNoteView

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Report Notes</h4>

<a class="glyphicon-text-color">
    @ViewBag.Message
</a>

<hr />
<div class="row">
    

    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Student" class="control-label"></label>
                <select asp-for="Student" asp-items="@Model.Students" class="form-control">
                    <option>Select Student Name</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Test" class="control-label"></label>
                <select asp-for="Test" asp-items="@Model.Tests" class="form-control">
                    <option>Select Test Name</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>Create</button>
                <a asp-action="Index" class="btn btn-success"><i class="fa fa-arrow-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
